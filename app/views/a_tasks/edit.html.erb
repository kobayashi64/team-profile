      <td><%= @a_task.a_certification.name %></td>
      <td><%= @a_task.operation_handover_material %></td>
    <td><%= @a_task.incident_handover_material %></td>
    <td><%= @a_task.failure_flow %></td>
      </tr>
   
  </tbody>
</table>
</div>
</div>
</div>
</div>
                   
